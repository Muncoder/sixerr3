	<% @products.each_slice(3) do |products| %>

		<div class="row">
			<% products.each do |product| %>
				<div class="col-md-4">
					<div class="well">
						<div class="h1"><%= product.name %></div>
						<% if product.image %>
							<%= image_tag(product.image.url(:medium)) %>						
						<% end %>
						<p class="product_description">
							<%= product.short_description %>
							<% if product.description.length > 130 %>
								<%= link_to "view more >>", product_path(product) %>
							<% end %>
						</p>
						<p><%= product.price %></p>
						<hr>
						<%= link_to "Show", product_path(product), class: "btn btn-primary btn-xs" %> 

						<% if current_user && product.user_id == current_user.id %>
							<%= link_to "Edit", edit_product_path(product), class: "btn btn-info btn-xs" %>
						<% end %>
					</div>
				</div>
			<% end %>
		</div>

	<% end %>
